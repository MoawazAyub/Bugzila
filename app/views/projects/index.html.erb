<h3 class="role_teller"> you are logged in as <%= current_user.role %></h3>





<h2>My Projetcs</h2>

<table style="width:100%">
	<tr>
		<th>Project ID</th>
		<th>Project Title</th>
		<th>Description</th>
		<th>Created_at</th>
		<th>Actions</th>
	</tr>

	<% @projects.each do |project| %>

		<!-- if project.users.include? current_user %>-->
			<tr>
				<td><%= project.id %></td>
				<td><%= project.title %></td>
				<td><%= project.description %></td>
				<td><%= project.created_at %></td>
				<td><%= link_to "show", project, class: 'whiter' %></td>
			</tr>
		<!-- end %>-->
		  
	<% end %>

	<!-- if current_user.role == 'manager' %>-->
		<%= link_to "Create Project", new_project_path if policy(Project).create? %>
	<!-- end %>-->

</table> 